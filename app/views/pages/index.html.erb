<!doctype html>
<head>
<title>Calorie Tracker</title>
<%= stylesheet_link_tag "application" %>
<%= javascript_include_tag "application" %>
</head>
<body ng-app="app" ng-controller="MainController as main">
  <nav class="navbar navbar-default">
    <div class="container">
      <a href="#/" class="btn btn-primary navbar-btn">Home</a>
      <div class="navbar-right">
        <a ng-if="!userInfo.info.id" href="#/login" class="btn btn-default navbar-btn">Login</a>
        <a ng-if="userInfo.info.admin" href="#/users" class="btn btn-default navbar-btn">Users</a>
        <a ng-if="userInfo.info.id" href="#/users/{{userInfo.info.id}}" class="btn btn-default navbar-btn">Account</a>
        <a ng-click="logout()" ng-if="userInfo.info.id" class="btn btn-danger navbar-btn">Logout</a>
      </div>
    </div>
  </nav>
  <div class="container">
    <div ng-view></div>
  </div>
</body>
